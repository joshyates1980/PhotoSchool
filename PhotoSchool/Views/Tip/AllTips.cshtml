﻿﻿@model IEnumerable<PhotoSchool.ViewModels.Tip.TipViewModel>

<div class="wrap">
    <div class="container">
        <section>
            <h4 class="text-center tiptop">Learn more about your camera's settings and and how simple adjustments create beautiful photo effects!</h4>
            <div class="row">                
                @foreach (var tip in Model)
                {
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-body tips-order text-justify">
                                @tip.Content
                            </div>
                        </div>
                    </div>
                }
        </div>
    </section>
  </div>
</div>

