<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PhotoSchool</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Content/img/logo.png")" />
                        </a>
                    </div>
                </div>
                
                <div class="col-md-8">
                    <div class="header_right_block">
                        <div class="fright input-group">
                            <form action="#" method="post">
                                <input id="search" class="form-control" name="name" type="text" value="Search the Site" onfocus="if (this.value == 'Search the Site') this.value = '';" onblur="if (this.value == '') this.value = 'Search the Site';" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-search"></span>
                                </span>
                            </form>
                        </div>
                        <div class="topbar">
                            @Html.Partial("_LoginPartial")
                        </div>
                        <div class="follow_us">
                            <ul>
                                <li><a href="#" class="facebook">Facebook</a></li>
                                <li><a href="#" class="gplus">Google+</a></li>
                                <li><a href="#" class="twitter">Twitter</a></li>
                            </ul>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        @RenderBody()

    <div class="footer_bottom">
        <div class="wrap">
            <div class="container">
                <div class="row">
                    <div>
                        <div class="copyright">All rights reserved&copy; 2014 Vanina Nenova</div>
                    </div>                
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
