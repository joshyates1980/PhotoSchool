@model PhotoSchool.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-12">
        <section id="loginForm" class="top-bottom-space">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h3 class="text-center">Create a new account.</h3>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" class="btn send_btn" value="Register" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
<div class="wrap planning">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <a href="#">
                    <span class="img_icon icon1"></span>
                    <span class="link_title">I want to learn</span>
                    Learn more about your camera's settings and and how simple adjustments create beautiful photo effects!
                </a>
            </div>
            <div class="col-md-3">
                <a href="#">
                    <span class="img_icon icon2"></span>
                    <span class="link_title">I want to try</span>
                    Adjust camera settings, take the shot and get feedback.
                </a>
            </div>
            <div class="col-md-3">
                <a href="#">
                    <span class="img_icon icon3"></span>
                    <span class="link_title">I want to win</span>
                    Test yourself as we challenge you to prove what you have learnt and take part in our contest!
                </a>
            </div>
            <div class="col-md-3">
                <a href="#">
                    <span class="img_icon icon4"></span>
                    <span class="link_title">I want to join</span>
                    Join our forum community to share your experience.
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
